= render "shared/header"

%main.items-index-main
  .main-image
    = link_to "", target: "_blank" do
      = image_tag '/images/top_visual_camp.png', alt: 'メルカリなら新品も中古もお得！キャンプ用品 大特集！'
  .popular-menu
    .popular-menu--category
      %h2 人気のカテゴリー
      .popular-menu__links
        %ul.popular-menu__links__list
          %li.popular-menu__links__list__link
            =link_to 'レディース', "", class: 'popular-menu__links__list__link_btn'
          %li.popular-menu__links__list__link
            =link_to 'メンズ', "", class: 'popular-menu__links__list__link_btn'
          %li.popular-menu__links__list__link
            =link_to '家電・スマホ・カメラ', "", class: 'popular-menu__links__list__link_btn'
          %li.popular-menu__links__list__link
            =link_to 'おもちゃ・ホビー・グッズ', "", class: 'popular-menu__links__list__link_btn'
  
  .items-container-wrapper
    .items-container
      .items-container__upper-part
        %h3.items-container__upper-part__title
          レディース新着アイテム
        =link_to 'もっと見る', "", class: 'items-container__upper-part__more'
      .items-container__lower-part
        - if @lady_items.present?
          - @lady_items.each do |item|
            .items-list
              = link_to "/items/#{item.id}", class: "items-list-link" do
                = image_tag item.images[0].image.url, alt: 'items-image', height: '188px', width: '188px', class: 'items-image'
                .items-detail
                  .items-price
                    %span.price-yen
                      ¥#{item.price}
                  %h3.items-name
                    #{item.name}
        - else
          .nothing-block
            = fa_icon "ban", class: "nothing-block-icon"

