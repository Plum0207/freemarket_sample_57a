= render "devise/user/user_header"

.container-login-signin

  %main.main

    .signup-panel
      %p.signup-panel__title 新規会員登録

      .signup-panel__inherit
        .sign-up-btn
          = button_to user_info_signup_index_path, method: :get,class: "btn-mail" do
            = fa_icon "far envelope", class: "mail-icon"
            メールアドレスで登録
      
        %button#facebook
          =link_to "", class: '' do
            =fa_icon 'facebook-square', class: 'facebook-icon'
          Facebookで登録
          
        %button#Google
          =link_to "", class: '' do
            = image_tag "google.svg", class: 'google-icon'
          Googleで登録
          
= render "devise/user/user_footer"