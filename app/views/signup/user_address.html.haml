= render "devise/registrations/user_header_3"

%main.main
  .signup-panel
    %p.signup-panel__title 住所入力
    %form#new_user.inputForm{"accept-charset" => "UTF-8", :action => "/signup/user_card", :method => "get"}
      %input{:name => "utf8", :type => "hidden", :value => "✓"}/
      .signup-panel
        .signup-form
          .field
            %label{:for => "name"} お名前
            %span.form-require
            %input#user_last_name.field__input{:name => "user[last_name]", :placeholder => "例）山田", :type => "text"}/
            %input#user_first_name.field__input{:name => "user[first_name]", :placeholder => "例）太郎", :type => "text"}/
          .field
            %label{:for => "name_kana"} お名前カナ
            %span.form-require
            %input#user_last_name_kana.field__input{:name => "user[last_name_kana]", :placeholder => "例）ヤマダ", :type => "text"}/
            %input#user_first_name_kana.field__input{:name => "user[first_name_kana]", :placeholder => "例）タロウ", :type => "text"}/
      .signup-form
        .field
          %label{:for => "postal_code"} 郵便番号
          %span.form-require
          %input#user_address_postal_code.field__input{:name => "user_address[postal_code]", :placeholder => "例）123−4567", :type => "text"}/
        .field
          %label{:for => "prefecture"} 都道府県
          %span.form-require
          %input#user_address_prefecture.field__input{:name => "user_address[prefecture]", :placeholder => "例）東京都", :type => "text"}/
        .field
          %label{:for => "city"} 市区町村
          %span.form-require
          %input#user_address_city.field__input{:name => "user_address[city]", :placeholder => "例）港区", :type => "text"}/
        .field
          %label{:for => "address"} 番地
          %span.form-require
          %input#user_address_address.field__input{:name => "user_address[address]", :placeholder => "例）青山1-1-1", :type => "text"}/
        .field
          %label{:for => "building"} 建物名
          %span.form-require--gray
          %input#user_address_building.field__input{:name => "user_address[building]", :placeholder => "例）テキスパタワー101", :type => "text"}/
        .field
          %label{:for => "telephone"} 電話
          %span.form-require--gray
          %input#user_address_telephone.field__input{:name => "user_address[telephone]", :placeholder => "例）09012345678", :type => "text"}/
          .sign-up-btn
      .sign-up-btn
        %button.btn-red{:type => "submit"}
          次へ進む

